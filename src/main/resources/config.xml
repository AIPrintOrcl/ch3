<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:component-scan base-package="com.fastcampus.ch3"> <!-- 패키지 안에 있는 클래스 중에서 Component Annotation 붙은 걸 찾아서 Bean에 등록  -->
    <!-- ConflictingBeanDefinitionException 에러 : Bean 정의가 충돌 발생 -->
        <context:exclude-filter type="regex" expression="com.fastcampus.ch3.diCopy*.*"/>
    </context:component-scan>

    <context:annotation-config/> <!-- @Autowired 사용하려면 context:annotation-config 태그 사용해야한다. -->
</beans>