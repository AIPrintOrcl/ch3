<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="car" class="com.fastcampus.ch3.Car">
        <!--<constructor-arg name="color" value="red"/> &lt;!&ndash; constructor-arg : 속성. 초기화해준다. setter가 존재해야 constructor-arg 할 수 있다. &ndash;&gt;
        <constructor-arg name="oil" value="100"/> &lt;!&ndash; 스프링에서 자동으로 형변환 해준다. &ndash;&gt;
        <constructor-arg name="engine" ref="engine"/> &lt;!&ndash; ref : 참조. 기본형, String 제외하고는 ref로 &ndash;&gt;
        <constructor-arg name="doors">
            <array value-type="com.fastcampus.ch3.Door">
                <ref bean="door"/>
                <ref bean="door"/>
            </array>
        </constructor-arg>-->

        <constructor-arg name="color" value="red"/> <!-- constructor-arg : 생성자 초기화. 생성자가 생성되야한다. -->
        <constructor-arg name="oil" value="100"/> <!-- 스프링에서 자동으로 형변환 해준다. -->
        <constructor-arg name="engine" ref="engine"/> <!-- ref : 참조. 기본형, String 제외하고는 ref로 -->
        <constructor-arg name="doors">
            <array value-type="com.fastcampus.ch3.Door">
                <ref bean="door"/>
                <ref bean="door"/>
            </array>
        </constructor-arg>
    </bean>
    <bean id="engine" class="com.fastcampus.ch3.Engine" /> <!-- singleton : default. 하나의 객체만 생성하고 같은 객체를 호출. -->
    <bean id="door" class="com.fastcampus.ch3.Door" scope="prototype"/> <!-- prototype : 매번 다른 객체로 생성하고 호출 -->
</beans>